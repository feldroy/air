{
  "$schema": "https://raw.githubusercontent.com/hougesen/mdsf/refs/heads/main/schemas/v0.11.1/mdsf.schema.json",
  "languages": {
    "json": "oxfmt",
    "jsonc": "oxfmt",
    "json5": "oxfmt",
    "html": "oxfmt",
    "css": "oxfmt",
    "jinja": "djlint",
    "python": [
      "ruff:format",
      "ruff:check",
      "ty"
    ],
    "shell": [
      "shfmt",
      "beautysh",
      "shellcheck"
    ],
    "console": [
      "shfmt",
      "beautysh"
    ],
    "toml": [
      "tombi:format",
      "tombi:lint"
    ],
    "yaml": "yamlfmt",
    "markdown": [],
    "pycon": []
  },
  "language_aliases": {
    "bash": "shell",
    "sh": "shell",
    "zsh": "shell",
    "py": "python",
    "md": "markdown"
  },
  "runners": {
    "bunx": true,
    "uv": true
  }
}
