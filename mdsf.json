{
  "$schema": "https://raw.githubusercontent.com/hougesen/mdsf/refs/heads/main/schemas/v0.11.1/mdsf.schema.json",
  "language_aliases": {
    "IPython Notebook": "Jupyter Notebook",
    "bash": "shell",
    "bash session": "console",
    "md": "markdown",
    "py": "python",
    "sh": "shell",
    "zsh": "shell"
  },
  "languages": {
    "Jupyter Notebook": [
      "ruff:format",
      "ruff:check"
    ],
    "console": [],
    "css": "oxfmt",
    "html": "oxfmt",
    "jinja": "djlint",
    "json": "oxfmt",
    "json5": "oxfmt",
    "jsonc": "oxfmt",
    "markdown": [],
    "pycon": [],
    "python": [
      "ruff:format",
      "ruff:check",
      "ty"
    ],
    "shell": [
      "shfmt"
    ],
    "toml": [
      "tombi:format",
      "tombi:lint"
    ],
    "yaml": "yamlfmt"
  },
  "runners": {
    "bunx": true,
    "uv": true
  }
}
