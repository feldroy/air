{
  "$schema": "https://raw.githubusercontent.com/hougesen/mdsf/refs/heads/main/schemas/v0.11.1/mdsf.schema.json",
  "languages": {
    "json": "oxfmt",
    "json5": "oxfmt",
    "html": "oxfmt",
    "css": "oxfmt",
    "jinja": "djlint",
    "env": "dotenv-linter:fix",
    "python": [
      "ruff:format",
      "ruff:check",
      "ty"
    ],
    "shell": [
      "shfmt",
      "beautysh"
    ],
    "toml": [
      "tombi:format",
      "tombi:lint"
    ],
    "yaml": "yamlfmt"
  },
  "language_aliases": {
    "bash": "shell",
    "sh": "shell",
    "zsh": "shell"
  },
  "runners": {
    "bunx": true,
    "uv": true
  }
}
